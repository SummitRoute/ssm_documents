            "\t  $AnswerFileLocation = $UpgradeDirectory+'\\\\answer_file.xml' \n",
            "\t  $UpgradeSetUpPath= Find-WindowSetupPath  \n",
            "\t  Download-AnswerFile $AnswerFileLocation \n",
            "\t  Upgrade-Server  \n",
            "}\n",
            "catch\n",
            "{ \n",
