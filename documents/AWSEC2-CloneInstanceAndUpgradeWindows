            "function Write-Log   \n",
            "{   \n",
            "  PARAM   \n",
            "    (   \n",
            "         [Parameter(Mandatory = $true)] [string] $logMessage   \n",
            "        ,[ValidateSet(\"Green\", \"Yellow\", \"Red\")] [string] $Color   \n",
            "    )   \n",
            "   $Datestamp = [datetime]::Now.ToString('yyyy-MM-dd HH:mm:ss.fff')   \n",
            "    $FullMessage = \"$Datestamp $logMessage\"    \n",
            "    if($Color)  \n",
